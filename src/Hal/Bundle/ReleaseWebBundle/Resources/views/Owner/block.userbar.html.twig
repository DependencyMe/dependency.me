{% if app.user is not null %}
    <li class="logout"><a href="{{ path('owner.repository.list') }}"><i class="icon icon-user icon-white"></i>  My Account</a></li>
    <li class="logout"><a href="{{ path('repository.list.by.owner', {login: app.user.login}) }}"><i class="icon icon-eye-open icon-white"></i> My  Public profile</a></li>
    <li class="logout"><a href="{{ path('_logout') }}"><i class="icon icon-off icon-white"></i> Logout ({{ app.user.login }})</a></li>
{% else %}
    <li><a href="{{ hwi_oauth_login_url('github') }}"><i class="icon icon-user icon-white"></i> Login with GitHub</a></li>
{% endif %}
