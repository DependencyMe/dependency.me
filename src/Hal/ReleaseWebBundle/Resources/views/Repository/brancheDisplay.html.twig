{% extends "HalReleaseWebBundle::base.html.twig" %}

{% block body %}

    <div class="row">
        <div id="owner-profile" class="span4">


            <div class="media">
                <div class="pull-left">
                    <img class="img-polaroid" src="{{ owner.gravatarUrl }}"/>
                </div>
                <div class="media-body">
                    <a href="{{ owner.url }}"
                       target="_blank">{{ owner.login }}</a>
                    <br/> {{ owner.repositories | length }} repositories
                </div>

            </div>





            <table class="table table-condensed ">
                <thead>
                <tr>
                    <th>Label</th>
                    <th>Description</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td><span class="label label-success">Latest</span></td>
                    <td>project uses latest versions</td>
                </tr>
                <tr>
                    <td><span class="label label-info">Recent</span></td>
                    <td>project uses recent versions</td>
                </tr>
                <tr>
                    <td><span class="label label-warning">OutOfDate</span></td>
                    <td>project uses deprecated versions</td>
                </tr>
                <tr>
                    <td><span class="label">empty</span></td>
                    <td>no information provided</td>
                </tr>
                </tbody>
            </table>



        </div>

        <div id="owner-repositories-branches" class="span8">




            <h1>Dependencies of {{ owner.login }}/{{ branche.repository.name }}/{{ branche.name }}</h1>

            <table class="table table-stripped table-bordered table-hover">
                <thead>
                <tr>
                    <th>Package</th>
                    <th>Required Version</th>
                    <th>Current Version</th>
                    <th>Status</th>
                </tr>
                </thead>
                <tbody>
                {% for requirement in branche.declaration.requirements if branche.repository.enabled %}
                    <tr>
                        <td>{{ requirement.package.name }}</a></td>
                        <td>{{ requirement.requiredVersion }}</a></td>
                        <td>{{ requirement.package.currentVersion.version }}</a></td>
                        <td>
                            <span class="label label-state-{{ requirement_state(branche) }}">
                            {{ requirement_state(requirement) }}</span>

                        </td>

                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </div>






    </div>
{% endblock %}