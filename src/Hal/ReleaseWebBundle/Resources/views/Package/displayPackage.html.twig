{% extends "::base.html.twig" %}

{% block body %}

    <div class=" package-container">
        <h1>Package {{ package.name }}</h1>

        <p>
            Created By <a href="#">Halleck</a>,
            Last release : 1.0 -  {{ package.releaseDate | date('M d, Y') }}
        </p>

        <p></p>

        <p>
            Url : <a href="http://azerty.fr">http://azerty.fr</a>
        </p>

        <p>
            Github : <a href="http://azerty.fr">http://github.com/azerty/lorem</a>
        </p>

        <p>
            This package has {{ package.requirements  | length }} dependencies.
        </p>

        <div class="package-dependencies">

            <table class="table table-bordered table-stripped table-hover table-condensed">
                <thead>
                <tr>
                    <th>Package</th>
                    <th>Expected</th>
                    <th>Latest</th>
                    <th>Status</th>
                </tr>
                </thead>
                <tbody>
                {% for dependency in package.requirements %}
                    <tr>
                        <td><a href="{{ dependency.packageExpected.url }}">{{ dependency.packageExpected.name }}</a></td>
                        <td>{{ dependency.constraint.getPrettyString() }}</td>
                        <td>{{ dependency.packageExpected.currentVersion.getVersion() }}</td>
                        <td>
                            <span class="label label-success">Latest</span>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>


        </div>


    </div>
{% endblock %}